[core]
  editor = code --wait
[diff]
  tool = vscode
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
[merge]
  tool = vscode
[mergetool "vscode"]
  cmd = code --wait $MERGED
[pull]
  rebase = true

[user]
  name = Arhun Saday
  email = arhunsad@gmail.com

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[init]
  defaultBranch = master

[help]
  autocorrect = 01

[alias]
  a = add
  b = branch
  c = commit
  d = diff
  f = fetch
  g = grep
  l = log
  m = merge
  o = checkout
  s = status -sb
  p = pull
  r = remote
  w = whatchanged

  undo = reset HEAD~1 --mixed
  unstage = reset --soft HEAD^
  rv = revert

  co = checkout
  cob = checkout -b
  coo = !git fetch && git checkout
  rom = !git fetch && git rebase -i origin/master --autosquash

  res = !git reset --hard
  done = !git push origin HEAD

  cm = commit -m
  cam = commit -a -m
  fix = commit --fixup
  amend = commit --amend -m
  rv = remote -v
  pushf = push --force-with-lease <remote> <branch>
  commitamend = commit --amend --no-edit

  rb = rebase
  rbc = rebase --continue
  rba = rebase --abort
  rbs = rebase --skip

  save = "!f() { stash_name=$1; git stash save -u \"$stash_name\"; }; f"
  stashlist = "stash list --pretty=format:'%C(yellow)%h %C(red)%gd %C(green)%cr %C(bold blue)%s%d %C(reset)%b'"
  save = stash push
  pop = stash pop
  apply = stash apply

  aa = add -A .
  cp = cherry-pick
  pu = !git push origin `git branch --show-current`
  fush = push -f
  mg = merge --no-ff

  last = log -1 HEAD --stat
  lg = log --graph --all --pretty=format:'%Cred%h%Creset - %s %Cgreen(%cr) %C(bold blue)%an%Creset %C(yellow)%d%Creset'

  br = branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
  brd = branch -d

[
  {
    "name": "🔔⏯️ Audio: Play/pause",
    "command": "xdotool key XF86AudioPlay"
  },
  {
    "name": "🔔⏮️ Audio: Previous",
    "command": "xdotool key XF86AudioPrev"
  },
  {
    "name": "🔔⏭️ Audio: Next",
    "command": "xdotool key XF86AudioNext"
  },
  {
    "name": "🖥️🛑 Power menu: Power off",
    "confirm": true,
    "command": "gnome-session-quit --power-off"
  },
  {
    "name": "🖥️♻️ Power menu: Reboot",
    "confirm": true,
    "command": "gnome-session-quit --reboot"
  },
  {
    "name": "🖥️🔒 Power menu: Lock",
    "command": "dbus-send --type=method_call --dest=org.gnome.ScreenSaver /org/gnome/ScreenSaver org.gnome.ScreenSaver.Lock"
  },
  {
    "name": "🖥️💤 Power menu: Suspend",
    "confirm": true,
    "command": "systemctl suspend -i"
  },
  {
    "name": "🖥️🐻 Power menu: Hibernate",
    "confirm": true,
    "command": "systemctl hibernate -i"
  },
  {
    "name": "💡🎛️ Yeelight: Toggle on/off",
    "command": "yeelight-cli 192.168.1.20 toggle"
  },
  {
    "name": "💡🌃 Yeelight: Night preset",
    "command": "yeelight-cli 192.168.1.20 preset Night"
  },
  {
    "name": "💡🏠 Yeelight: Cosy home preset",
    "command": "yeelight-cli 192.168.1.20 CosyHome"
  },
  {
    "name": "💡🌇 Yeelight: PC mode preset",
    "command": "yeelight-cli 192.168.1.20 PcHome"
  },
  {
    "name": "📻👧 Radio: Start lofi girl station",
    "command": "mpv --volume=60 --title=\"radio-mpv\" https://play.streamafrica.net/lofiradio"
  },
  {
    "name": "📻🛑 Radio: Stop playing",
    "command": "pkill -f radio-mpv || main"
  }
]


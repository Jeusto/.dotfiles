{
  // ###############
  // ###  Fonts  ###
  // ###############

  "editor.fontLigatures": true,
  "editor.fontFamily": "'JetBrainsMono Nerd Font'",
  "editor.fontWeight": "500",
  "editor.inlayHints.fontFamily": "'JetBrainsMono Nerd Font'",
  "editor.codeLensFontFamily": "'JetBrainsMono NF Regular'",
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font'",
  "terminal.integrated.fontSize": 14,

  // #########################
  // ###  Theme and style  ###
  // #########################

  "material-icon-theme.showWelcomeMessage": false,
  "workbench.preferredLightColorTheme": "Atom One Light",
  "workbench.preferredDarkColorTheme": "Atom One Dark",

  // ################
  // ###  Cursor  ###
  // ################

  "editor.multiCursorModifier": "ctrlCmd",
  "terminal.integrated.cursorStyle": "line",

  // ####################
  // ###  UI Options  ###
  // ####################

  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,
  "window.title": "${activeEditorShort} ${dirty}",
  "workbench.editor.pinnedTabSizing": "shrink",
  "workbench.sideBar.location": "right",
  "zenMode.hideTabs": false,
  "window.titleBarStyle": "custom",
  "editor.rulers": [80],
  "window.menuBarVisibility": "toggle",

  // ###########################
  // ###  Life improvements  ###
  // ###########################

  "editor.quickSuggestionsDelay": 0,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "none",
  "git.enableSmartCommit": true,
  "git.decorations.enabled": false,
  "editor.wordWrap": "wordWrapColumn",
  "workbench.editor.tabCloseButton": "off",
  "files.defaultLanguage": "markdown",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true,
    "node_modules": true
  },

  // ##################
  // ###  Terminal  ###
  // ##################

  "terminal.external.windowsExec": "C:\\Program Files\\Git\\git-bash.exe",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "Git Bash",
      "icon": "terminal-bash"
    },
    "Git Bash": {
      "source": "Git Bash",
      "icon": "terminal-bash"
    }
  },
  "terminal.integrated.defaultProfile.linux": "zsh",

  // ###################
  // ###  Languages  ###
  // ###################

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "python.formatting.yapfArgs": [
    "--style={based_on_style: google, column_limit: 80, indent_width: 2}"
  ],
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnPaste": false
  },
  "java.project.sourcePaths": [""],
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[java]": {
    "editor.defaultFormatter": "mwpb.java-prettier-formatter"
  },
  "json.format.enable": true,
  "html.format.wrapAttributes": "force-aligned",
  "html.hover.references": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "files.associations": {
    "*.pl": "prolog",
    "*.jsx": "javascriptreact"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.wordWrap": "off",
    "editor.quickSuggestions": false
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },

  // ############################
  // ###  Extension settings  ###
  // ############################

  "leetcode.hint.commandShortcut": false,
  "leetcode.hint.configWebviewMarkdown": false,
  "leetcode.hint.commentDescription": false,
  "leetcode.defaultLanguage": "c",
  "leetcode.editor.shortcuts": [],
  "leetcode.workspaceFolder": "c:\\Users\\arhun\\Documents\\Projets\\leetcode-problems",
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.root": "/",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveSassCompile.settings.showOutputWindow": false,
  "liveSassCompile.settings.autoprefix": ["> 1%", "last 2 versions"],
  "liveSassCompile.settings.formats": [
    {
      "format": "compressed",
      "extensionName": ".css",
      "savePath": "~"
    }
  ],
  "debug-leetcode.cppCompiler": "clang",
  "codesnap.showWindowControls": false,
  "material-ui-snippets.showNotesOnStartup": false,
  "thunder-client.codeSnippetLanguage": "js-axios",
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.keymap": "alternate",
  "gitlens.codeLens.enabled": false,
  "latex-workshop.view.pdf.viewer": "browser",
  "numberedBookmarks.saveBookmarksInProject": true,
  "C_Cpp.updateChannel": "Insiders",
  "sqltools.useNodeRuntime": true,
  "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",
  "C_Cpp.clang_format_fallbackStyle": "Google",
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "projectManager.git.baseFolders": ["~/Universite", "~/Perso"],
  "code-runner.runInTerminal": true,
  "code-runner.terminalRoot": "/",
  "code-runner.clearPreviousOutput": true,
  "code-runner.executorMap": {
    "c": "cd $dir && gcc $fileName -o $fileNameWithoutExt -Wall -Wextra && $dir$fileNameWithoutExt"
  },
  "react-native-tools.showUserTips": false,
  "python.formatting.provider": "yapf",
  "remote.SSH.remotePlatform": {
    "turing.u-strasbg.fr": "linux"
  },
  "C_Cpp_Runner.warnings": ["-Wall", "-Wextra", "-Wpedantic", "-Werror"],

  // ####################
  // ###  Minimal UI  ###
  // ####################

  // "editor.minimap.enabled": false, // removes minimap
  // "editor.renderWhitespace": "none", // removes whitespace chars
  // "editor.renderIndentGuides": false, // removes indent guides
